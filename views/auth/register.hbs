

<form action="/register" method="post">
    <div class="input-group mb-1">
    <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
    <input type="text" name="username" class="form-control {{#if errors.username}} is-invalid{{/if}}" placeholder="Name" aria-label="User name" value="{{ user.username }}">
    {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
  </div>
  <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
        <input type="text" name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" placeholder="user@example.com" aria-label="User email" value="{{ user.email }}">
        {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text"><i class="fa fa-lock fa-fw"></i></span>
        <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="Password" aria-label="User password">
        {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
      </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>